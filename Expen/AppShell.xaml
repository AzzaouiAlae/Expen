<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Expen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Expen"
    Shell.FlyoutBehavior="Disabled"
    Title="Expen">

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


    <ShellContent        
        Route="PageHome" >
        <local:PageHome x:Name="pageHome"/>
    </ShellContent>

    
    <ShellContent
        ContentTemplate="{DataTemplate local:PageStrat}"
        Route="PageStrat" />    

    <ShellContent
        ContentTemplate="{DataTemplate local:PageWallets}"
        Route="PageWallets" />

    <ShellContent
        ContentTemplate="{DataTemplate local:PageTransaction}"
        Route="PageTransaction" />

    <ShellContent
        ContentTemplate="{DataTemplate local:PageReport}"
        Route="PageReport" />    

</Shell>
