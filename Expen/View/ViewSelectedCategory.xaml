<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expen.ViewSelectedCategory" >

    <Border Padding="10,6" x:Name="br">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15"/>
        </Border.StrokeShape>

        <HorizontalStackLayout Spacing="10">
            <Image x:Name="img" HeightRequest="40" WidthRequest="40"/>
            <Label FontFamily="BeVietnamProSemiBold" x:Name="lblName" FontSize="14" VerticalOptions="Center" TextColor="White"/>
        </HorizontalStackLayout>
        
    </Border>
    
</ContentView>
