<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expen.ViewSelectedWallet">
    
    <Border Padding="10,6" x:Name="br">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15"/>
        </Border.StrokeShape>
        
        <Grid RowDefinitions="*,*" ColumnDefinitions="Auto,*" ColumnSpacing="10" RowSpacing="3">
            <Image Grid.RowSpan="2" x:Name="img" HeightRequest="40" WidthRequest="40"/>
            <Label Grid.Column="1" x:Name="lblName" VerticalOptions="End" />
            <Label Grid.Column="1" Grid.Row="1" x:Name="lblBalance" FontFamily="BeVietnamProSemiBold" TextColor="Green" FontSize="15"/>
        </Grid>
        
    </Border>
    
</ContentView>
